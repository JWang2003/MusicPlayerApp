<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/songscreen"
    android:background="@drawable/gradientbackgroundred"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaySongMain">

    <!--Top bar [start]-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp">

        <!--back button-->
        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />


        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="217dp"
            android:text="Button" />
    </LinearLayout>
    <!--Top bar [end]-->

    <!--Song Image-->
    <ImageView
        android:id="@+id/songImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ahyes"/>

    <!--Song info [start]-->
    <LinearLayout
        android:id="@+id/TextViews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="445dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/songName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingLeft="47dp"
            android:paddingRight="47dp"
            android:text="Megalovania"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="39dp" />

        <TextView
            android:id="@+id/songWriter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingLeft="47dp"
            android:paddingRight="47dp"
            android:text="Toby Fox"
            android:textAlignment="center"
            android:textColor="#7d7d7d"
            android:textSize="25dp" />

    </LinearLayout>
    <!--Song info [end]-->

    <!--Bottom section [start]-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">


        <!--Bottom bar [start]-->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <!--Shuffle button-->
            <ImageButton
                android:id="@+id/shuffle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/shuffle"
                android:backgroundTint="#FFFFFF" />

            <!--Prev button-->
            <ImageButton
                android:id="@+id/prev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_previous" />

            <!--Play/Pause button-->
            <ImageButton
                android:id="@+id/pauseplay"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/play"
                android:backgroundTint="#FFFCFC"
                android:tint="#FFFFFF" />


            <!--Next button-->
            <ImageButton
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_next" />

            <!--Loop button-->
            <ImageButton
                android:id="@+id/loop"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/stat_notify_sync"

                />

        </LinearLayout>
        <!--Bottom bar [end]-->

        <!--Lower margin [start]-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">


            <!--Ask Hana-->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>
        <!--Lower margin [end]-->
    </LinearLayout>
    <!--Lower section [end]-->

</androidx.constraintlayout.widget.ConstraintLayout>