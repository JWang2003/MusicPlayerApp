<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/gradientbackgroundred"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <!--Background [start]-->
    <ImageView
        android:id="@+id/bgFlagView"
        android:layout_width="800dp"
        android:layout_height="match_parent"
        android:rotation="90"
        android:alpha="0.2"
        app:srcCompat="@drawable/flag_china"
        tools:layout_editor_absoluteX="-156dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <!--Background [end]-->

    <!--Top section [start]-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/MenuBar">

        <!--Top bar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingRight="30dp">

            <!--Home text-->
            <TextView
                android:id="@+id/HomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/home"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#ffffff"
                android:textSize="36sp" />


            <!--Search bar-->
            <SearchView
                android:id="@+id/search_bar"
                android:layout_width="189dp"
                android:layout_height="33dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/searchbar"
                android:iconifiedByDefault="false" />
        </LinearLayout>
        <!--Top section [end]-->

        <!-- Middle bar [start]-->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Welcome text-->
            <TextView
                android:id="@+id/textView"
                android:layout_width="384dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:text="Welcome   "
                android:textAlignment="viewEnd"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginRight="25dp"
                tools:ignore="RtlCompat" />

            <!--User pfp-->
            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/pfpDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pfp_xi" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <!--Middle bar [end]-->


        <!--Bottom bar [start]-->
        <LinearLayout
            android:id="@+id/bottomMenuBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--Rickroullette button-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:elevation="10dp"
                app:cardCornerRadius="15dp">

                <ImageButton
                    android:id="@+id/rickroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/agony"
                    android:text="@string/rick_roullete"
                    tools:ignore="NestedWeights" />
            </androidx.cardview.widget.CardView>

            <!--Fav songs/Help section-->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <!--Fav songs-->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="right"
                    android:text="@string/our_songs"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded" />

                <!--Help-->
                <TextView
                    android:id="@+id/settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:clickable="true"
                    android:gravity="right"
                    android:onClick="onClickSettings"
                    android:text="@string/settings"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
        </LinearLayout>
        <!--Bottom bar [end]-->
    </LinearLayout>
    <!--Top section [end]-->

    <!--Recycler view [start]-->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MenuBar"
        android:id="@+id/recyclerView"
        android:scrollbars="vertical"/>
    <!--Recycler view [end]-->


</androidx.constraintlayout.widget.ConstraintLayout>